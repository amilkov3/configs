Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "gray"
        , position = TopW L 100 
        , commands = [ Run Network "wlan0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                        , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                        , Run Memory ["-t","Mem: <usedratio>%"] 10
                        , Run Swap [] 10
                        , Run Date "%a %b %_d %Y <fc=#ee9a00>%l:%M</fc>" "date" 10
                        , Run BatteryP ["BAT0"]
                          ["-t", "<acstatus><watts> (<left>%)",
                           "-L", "10", "-H", "80", "-p", "3",
                           "--", "-O", "<fc=green>On</fc> - ", "-i", "",
                           "-L", "-15", "-H", "-5",
                           "-l", "red", "-m", "blue", "-h", "green"] 600
                        , Run StdinReader
                      ] 
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% | %cpu% | %memory% * %swap% | %wlan0% }{ Batt: %battery% | %date%"
        }
